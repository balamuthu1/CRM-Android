<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="pds.isintheair.fr.crmtab.admin.referentiel.client.display.hc.fragment.DetailHCFragment">



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/create_customer_cartview_marge"
        android:layout_marginRight="@dimen/create_customer_cartview_marge"
        android:layout_marginTop="10dp"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="40dp"
                android:text="@string/display_hc_fragment_title_textview" />

        </LinearLayout>

        </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/create_customer_cartview_marge"
        android:layout_marginRight="@dimen/create_customer_cartview_marge"
        android:layout_marginTop="10dp"
        app:contentPaddingBottom="50dp"
        >
    <ScrollView
        android:id="@+id/detail_hc_fragment_scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/create_he_fragment_name_textview"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/detail_hc_fragment_name"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:minWidth="@dimen/create_customer_min_width_edit_text"
                    android:layout_height="wrap_content" />




            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="@dimen/detail_hc_margin_top"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/create_he_fragment_is_public_textview"
                    android:textStyle="bold"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/detail_hc_fragment_is_public"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/detail_hc_margin_top"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/create_he_fragment_siret_number_textview"
                    android:textStyle="bold"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/detail_hc_fragment_siret_number"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:minWidth="150dp"
                    android:inputType="number"
                    android:maxLength="14"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/detail_hc_margin_top"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/create_he_fragment_finess_number_textview"
                    android:textStyle="bold"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/detail_hc_fragment_finess_number"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:minWidth="@dimen/create_customer_min_width_edit_text"
                    android:inputType="number"
                    android:maxLength="9"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/detail_hc_margin_top"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/display_hc_fragment_adress_textview"
                    android:textStyle="bold"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/detail_hc_fragment_adress"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:inputType="number"
                    android:minWidth="@dimen/create_customer_min_width_edit_text"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="@dimen/detail_hc_margin_top"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/create_he_fragment_zip_code_textview"
                    android:textStyle="bold"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/detail_hc_fragment_zip_code"
                    android:minWidth="@dimen/create_customer_min_width_edit_text"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:inputType="number"
                    android:maxLength="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/detail_hc_margin_top"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/create_he_fragment_bed_number_textview"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/detail_hc_fragment_bed_number"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:minWidth="@dimen/create_customer_min_width_edit_text"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/detail_hc_margin_top"
                android:textStyle="bold"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/create_he_fragment_web_site_textview"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/detail_hc_fragment_web_site"
                    android:autoLink="web"
                    android:clickable="true"
                    android:minWidth="@dimen/create_customer_min_width_edit_text"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/detail_hc_margin_top"

                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/create_he_fragment_etablishment_type_textview"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/detail_hc_fragment_etablishment_type"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/detail_hc_margin_top"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/create_he_fragment_purshasing_central_textview"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/detail_hc_fragment_purshasing_central"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/detail_hc_margin_top"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/create_he_fragment_holding_textview"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/detail_hc_fragment_holding"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/detail_hc_margin_top"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/create_he_fragment_difficulty_having_contact_textview"
                android:textSize="@dimen/detail_hc_size_text_text_view"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/detail_hc_fragment_difficulty_having_contact"
                android:textSize="@dimen/detail_hc_size_text_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="@dimen/detail_hc_margin_top"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/create_he_fragment_service_building_textview"
                android:textSize="@dimen/detail_hc_size_text_text_view"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/detail_hc_fragment_service_building"
                android:textSize="@dimen/detail_hc_size_text_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />



        </LinearLayout>
                    <TextView
                        android:id="@+id/detail_hc_fragment_map_unavailable"
                        android:text="@string/display_hc_fragment_map_unavailable"
                        android:textSize="@dimen/detail_hc_size_text_text_view"
                        android:textColor="@android:color/holo_red_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/detail_hc_margin_top"
            android:orientation="vertical"
            android:layout_marginLeft="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <org.osmdroid.views.MapView android:id="@+id/detail_hc_fragment_map"
                android:layout_marginTop="@dimen/detail_hc_margin_top"
                android:layout_width="500dp"
                android:layout_height="300dp"
                android:layout_gravity="center_horizontal"
                />



            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    </android.support.v7.widget.CardView>

</LinearLayout>
