<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="fr.pds.isintheair.crmtab.view.activity.MainActivity"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/create_customer_cartview_marge"
        android:layout_marginRight="@dimen/create_customer_cartview_marge"
        android:layout_marginTop="?attr/actionBarSize"
        >

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="40dp"
                android:text="@string/create_phoning_campaign_fragment_title_fragment" />

            <LinearLayout
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/create_phoning_campaign_fragment_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <EditText
                    android:id="@+id/create_phoning_campaign_fragment_title"
                    android:layout_width="match_parent"
                    android:minWidth="@dimen/create_customer_min_width_edit_text"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/create_phoning_campaign_fragment_campaign_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/create_phoning_campaign_fragment_campaign_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:prompt="@id/create_phoning_campaign_fragment_campaign_type"></Spinner>


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/create_phoning_campaign_fragment_objective"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/create_phoning_campaign_fragment_objective"
                    android:layout_width="wrap_content"
                    android:minWidth="@dimen/create_customer_min_width_edit_text"
                    android:inputType="textMultiLine"
                    android:maxLines="2"
                    android:layout_height="wrap_content" />

            </LinearLayout>



                <TextView
                    android:text="@string/create_phoning_campaign_fragment_list_customer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ListView
                    android:id="@+id/create_phoning_campaign_fragment_list_customer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <Button
                    android:id="@+id/create_phoning_campaign_fragment_contact_list_button"
                    android:text="@string/create_phoning_campaign_fragment_button_contact_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>