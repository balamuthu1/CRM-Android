<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="pds.isintheair.fr.crmtab.admin.referentiel.client.display.hc.fragment.DetailIndepFragment">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/create_customer_cartview_marge"
        android:layout_marginRight="@dimen/create_customer_cartview_marge"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="40dp"
                android:gravity="center"
                android:textAlignment="center"
                android:text="@string/display_indep_fragment_title_textview" />
        </LinearLayout>
        </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/create_customer_cartview_marge"
        android:layout_marginRight="@dimen/create_customer_cartview_marge"
        android:layout_marginTop="10dp"
        app:contentPaddingBottom="50dp"
        >
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/create_he_fragment_name_textview"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/detail_indep_fragment_name"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:minWidth="@dimen/create_customer_min_width_edit_text"
                    android:layout_height="wrap_content" />




            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="@dimen/detail_hc_margin_top"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/create_he_fragment_siret_number_textview"
                    android:textStyle="bold"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/detail_indep_fragment_siret_number"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:minWidth="150dp"
                    android:inputType="number"
                    android:maxLength="14"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/detail_hc_margin_top"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/create_he_fragment_finess_number_textview"
                    android:textStyle="bold"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/detail_indep_fragment_finess_number"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:minWidth="@dimen/create_customer_min_width_edit_text"
                    android:inputType="number"
                    android:maxLength="9"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/detail_hc_margin_top"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/display_hc_fragment_adress_textview"
                    android:textStyle="bold"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/detail_indep_fragment_adress"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:inputType="number"
                    android:minWidth="@dimen/create_customer_min_width_edit_text"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="@dimen/detail_hc_margin_top"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/create_he_fragment_zip_code_textview"
                    android:textStyle="bold"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/detail_indep_fragment_zip_code"
                    android:minWidth="@dimen/create_customer_min_width_edit_text"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:inputType="number"
                    android:maxLength="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/detail_hc_margin_top"
                android:textStyle="bold"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/create_he_fragment_web_site_textview"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/detail_indep_fragment_web_site"
                    android:autoLink="web"
                    android:clickable="true"
                    android:minWidth="@dimen/create_customer_min_width_edit_text"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/detail_hc_margin_top"

                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/create_indep_fragment_independant_type_textview"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/detail_indep_fragment_independant_type"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/detail_hc_margin_top"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/create_indep_fragment_company_textview"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/detail_indep_fragment_company"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/detail_hc_margin_top"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/create_indep_fragment_specialty_textview"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/detail_indep_fragment_specialty"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="@dimen/detail_hc_margin_top"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/create_indep_fragment_long_term_fidelity_textview"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/detail_indep_fragment_long_term_fidelisation"
                    android:textSize="@dimen/detail_hc_size_text_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/detail_hc_margin_top"
            android:orientation="vertical"
            android:layout_marginLeft="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/detail_indep_fragment_map_unavailable"
                android:text="@string/display_hc_fragment_map_unavailable"
                android:textSize="@dimen/detail_hc_size_text_text_view"
                android:textColor="@android:color/holo_red_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <org.osmdroid.views.MapView android:id="@+id/detail_indep_fragment_map"
                android:layout_marginTop="@dimen/detail_hc_margin_top"
                android:layout_width="600dp"
                android:layout_height="400dp"
                android:layout_gravity="center_vertical"

                />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
