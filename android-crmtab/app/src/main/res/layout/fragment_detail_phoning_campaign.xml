<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="fr.pds.isintheair.crmtab.view.activity.MainActivity"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/create_customer_cartview_marge"
        android:layout_marginRight="@dimen/create_customer_cartview_marge"
        android:layout_marginTop="?attr/actionBarSize"
        >

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="40dp"
                android:text="@string/detail_phoning_campaign_fragment_title_fragment" />

            <LinearLayout
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/create_phoning_campaign_fragment_title"
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/detail_phoning_campaign_fragment_title"
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:minWidth="@dimen/create_customer_min_width_edit_text"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/create_phoning_campaign_fragment_campaign_type"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/detail_phoning_campaign_fragment_campaign_type"
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"
                    />


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/create_phoning_campaign_fragment_objective"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/detail_phoning_campaign_fragment_objective"
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:maxLines="4"
                    android:scrollbars = "vertical"
                    android:minWidth="@dimen/create_customer_min_width_edit_text"
                    android:layout_height="wrap_content" />


            </LinearLayout>



            <TextView
                android:text="@string/detail_phoning_campaign_fragment_list_customer"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_height="wrap_content" />

            <ListView
                android:id="@+id/detail_phoning_campaign_fragment_list_customer_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <Button
                android:id="@+id/detail_phoning_campaign_fragment_begin_campaign_button"
                android:text="@string/detail_phoning_campaign_fragment_begin_campaign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"/>


        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>